<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.udacity.submissions.sachin.booklisting.DetailedDescription"
    android:orientation="vertical">

    <ImageView android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/detailedImageView"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_margin="16dp">

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title: "
            android:textSize="16sp"
            />

        <TextView android:id="@+id/detailedbookTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title of the Book "
            android:layout_margin="5dp"
            android:textSize="15sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_margin="16dp">

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Author: "
            android:textSize="16sp"
            />

        <TextView android:id="@+id/detailedAuthor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Author of the Book "
            android:layout_margin="5dp"
            android:textSize="15sp"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:isScrollContainer="true"
        android:maxLines = "7"
        android:scrollbars = "vertical"
        android:layout_margin="16dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_margin="16dp">

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price: "
            android:textSize="16sp"
            />

        <TextView android:id="@+id/detailedPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="90"
            android:layout_margin="5dp"
            android:textSize="15sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_margin="16dp">

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rating: "
            android:textSize="16sp"
            />

        <TextView android:id="@+id/detailedRating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="90"
            android:layout_margin="5dp"
            android:textSize="15sp"
            />
    </LinearLayout>


</LinearLayout>
